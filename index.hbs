<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width">
        <title>Order Creator</title>
        <script src="index.js"></script>
        <link href="index.css" rel="stylesheet" type="text/css" />
    </head>
    <body>

    <!--Form-->
	<h1> Welcome to Savage Sales Order Creator</h1>
{{#each products}}
<div id={{this.id}}>
<h2>{{this.name}}</h2><br>
<label>Quantity</label>
<input id='pqty' type='number'><br>
<label>Unit Price</label>
  <input id='price' value='{{this.price}}'>
<br>
<button onclick='addItem({{this.id}})'>Add Product</button>
</div>
{{/each}}

  <h2>Added Products</h2>
  <div id='cart'></div>

  </body>
</html>
